{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "esnext",
		"target": "es5",
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"ES2021.String"
		],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": false,
		"noEmit": true,
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}